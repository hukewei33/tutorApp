<h1>students</h1>

<div class="container">
  <form class="myform" action="/students" method="post">
    <fieldset>
      <legend>What Will You be Learning?</legend>
      <div class="form-row">

        <!-- future implementaiton of using the students subject combination  -->
        <div class="form-group col-md-4">
          <label for="inputSubject">Subject</label>
          <select id="inputSubject" class="form-control custom-select" name="subject" required>
            <option value="Math">Math</option>
            <option value="Science">Science</option>
            <option value="English">English</option>
            <option value="History">History</option>
            <option value="Geography">Geography</option>
            <option value="Chemistry">Chemistry</option>
            <option value="Physics">Physics</option>
            <option value="Biology">Biology</option>
            <option value="Chinese">Chinese</option>
            <option value="GP">GP</option>
            <option value="Economics">Economics</option>
            <option value="English Lit">English Lit</option>
            <option value="Social Studies">Social Studies</option>
          </select>
        </div>

        <!-- all of now, use students current school year, allow more robust change in the future -->
        <!-- <div class="form-group col-md-4">
          <label for="inputLevels">Level</label>
