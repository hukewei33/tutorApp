          <label for="inputDate">Date</label> <br>
          <input type="date" id = "inputDate" name="date" value="">
        </div>
        <div class="form-group col-md-4">
          <label for="inputTime">Time (select one for now)</label>
          <select id="inputTime" class="form-control custom-select" name="time" required size = "5">
